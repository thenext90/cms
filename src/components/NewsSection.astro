---
import { Calendar, ArrowRight } from 'lucide-astro';
import noticiasData from '../data/noticias.json';

// Función para formatear fecha
function formatearFecha(fechaISO) {
  const fecha = new Date(fechaISO);
  const meses = [
    'Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio',
    'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'
  ];
  return `${meses[fecha.getMonth()]} ${fecha.getDate()}, ${fecha.getFullYear()}`;
}

// Mapear datos del JSON al formato esperado por el frontend
const news = noticiasData.map((noticia) => ({
  date: formatearFecha(noticia.fecha),
  title: noticia.titulo,
  excerpt: noticia.contexto,
  category: noticia.categoria,
  image: noticia.imagen
}));
---

<section class="py-24 bg-gradient-to-br from-gray-50 via-white to-gray-100">
  <div class="max-w-container mx-auto px-4">
    <div class="text-center mb-16">
      <div class="inline-flex items-center space-x-2 bg-blue-100 text-blue-800 px-4 py-2 rounded-full text-sm font-semibold mb-6">
        <Calendar size="16" />
        <span>Actualidad</span>
      </div>
      
      <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
        Cuadros Noticias
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Manténgase al día con las últimas novedades, actualizaciones normativas 
        y casos de éxito en el mundo de la gestión de calidad.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {news.map((article, index) => (
        <article class="group bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 overflow-hidden border border-gray-100 hover:border-accent-200 hover:-translate-y-2">
          <div class="relative">
            <img 
              src={article.image} 
              alt={article.title}
              class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-500"
            />
            <div class="absolute top-4 left-4">
              <span class="bg-gradient-to-r from-accent-600 to-accent-800 text-white text-xs font-semibold px-3 py-2 rounded-full shadow-lg backdrop-blur-sm">
                {article.category}
              </span>
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          
          <div class="p-6 space-y-4">
            <div class="flex items-center space-x-2 text-sm text-gray-500 font-medium">
              <Calendar size="16" />
              <time>{article.date}</time>
            </div>
            
            <h3 class="text-xl font-bold text-gray-800 leading-tight group-hover:text-accent-800 transition-colors">
              <a href={`/noticias/${index + 1}`}>
                {article.title}
              </a>
            </h3>
            
            <p class="text-gray-600 text-sm leading-relaxed line-clamp-3">
              {article.excerpt}
            </p>
            
            <div class="pt-4 border-t border-gray-100 flex items-center justify-between">
              <a 
                href={`/noticias/${index + 1}`}
                class="inline-flex items-center space-x-2 text-accent-800 hover:text-accent-900 font-semibold transition-colors group-hover:translate-x-1"
              >
                <span>Leer más</span>
                <ArrowRight size="16" />
              </a>
              <div class="w-8 h-1 bg-gradient-to-r from-accent-500 to-accent-700 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </div>
          </div>
        </article>
      ))}
    </div>

    <div class="text-center mt-12">
      <a href="/noticias" class="inline-flex items-center space-x-2 bg-gradient-to-r from-accent-800 to-accent-900 text-white px-10 py-4 rounded-xl hover:from-accent-900 hover:to-accent-800 transition-all duration-300 font-semibold shadow-xl hover:shadow-2xl hover:scale-105">
        <span>Ver Todas las Noticias</span>
        <ArrowRight size="18" />
      </a>
    </div>
  </div>
</section>
---
import { Calendar, ArrowRight } from 'lucide-astro';

const news = [
  {
    date: "Enero 15, 2025",
    title: "Se da inicio a su plan de certificación en las normas internacionales ISO 9001:2015",
    excerpt: "Nueva empresa del sector manufacturero inicia su proceso de certificación en ISO 9001:2015, buscando mejorar sus procesos de calidad y satisfacción del cliente.",
    category: "Certificación",
    image: "https://images.pexels.com/photos/3184339/pexels-photo-3184339.jpeg?auto=compress&cs=tinysrgb&w=400"
  },
  {
    date: "Enero 10, 2025",
    title: "Exitosa implementación de Sistema de Gestión de Seguridad y Salud Ocupacional",
    excerpt: "Empresa del sector minero completa con éxito la implementación de ISO 45001, fortaleciendo su compromiso con la seguridad laboral.",
    category: "Seguridad",
    image: "https://images.pexels.com/photos/3184317/pexels-photo-3184317.jpeg?auto=compress&cs=tinysrgb&w=400"
  },
  {
    date: "Diciembre 28, 2024",
    title: "Capacitación avanzada en Gestión Ambiental ISO 14001:2015",
    excerpt: "Programa especializado para profesionales que buscan profundizar en sistemas de gestión ambiental y sostenibilidad empresarial.",
    category: "Capacitación",
    image: "https://images.pexels.com/photos/3184465/pexels-photo-3184465.jpeg?auto=compress&cs=tinysrgb&w=400"
  },
  {
    date: "Diciembre 20, 2024",
    title: "Nueva metodología para evaluación de riesgos psicosociales",
    excerpt: "Innovadora aproximación metodológica para identificar y mitigar riesgos psicosociales en el ambiente laboral, cumpliendo con la normativa nacional.",
    category: "Metodología",
    image: "https://images.pexels.com/photos/3184360/pexels-photo-3184360.jpeg?auto=compress&cs=tinysrgb&w=400"
  },
  {
    date: "Diciembre 15, 2024",
    title: "Seminario Internacional sobre Sistemas Integrados de Gestión",
    excerpt: "Evento que reunió a expertos internacionales para discutir las mejores prácticas en la implementación de sistemas integrados de gestión.",
    category: "Evento",
    image: "https://images.pexels.com/photos/1438072/pexels-photo-1438072.jpeg?auto=compress&cs=tinysrgb&w=400"
  },
  {
    date: "Diciembre 05, 2024",
    title: "Actualización normativa: Cambios en ISO 27001 para el 2025",
    excerpt: "Análisis detallado de las actualizaciones más recientes en la norma de seguridad de la información y su impacto en las organizaciones.",
    category: "Normativa",
    image: "https://images.pexels.com/photos/3184338/pexels-photo-3184338.jpeg?auto=compress&cs=tinysrgb&w=400"
  }
];
---

<section class="py-20 bg-gray-50">
  <div class="max-w-container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-800 mb-4">
        Cuadros Noticias
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Manténgase al día con las últimas novedades, actualizaciones normativas 
        y casos de éxito en el mundo de la gestión de calidad.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {news.map((article, index) => (
        <article class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden">
          <div class="relative">
            <img 
              src={article.image} 
              alt={article.title}
              class="w-full h-48 object-cover"
            />
            <div class="absolute top-4 left-4">
              <span class="bg-accent-800 text-white text-xs font-semibold px-3 py-1 rounded-full">
                {article.category}
              </span>
            </div>
          </div>
          
          <div class="p-6 space-y-4">
            <div class="flex items-center space-x-2 text-sm text-gray-500">
              <Calendar size="16" />
              <time>{article.date}</time>
            </div>
            
            <h3 class="text-xl font-bold text-gray-800 leading-tight hover:text-primary-700 transition-colors">
              <a href={`/noticias/${index + 1}`}>
                {article.title}
              </a>
            </h3>
            
            <p class="text-gray-600 text-sm leading-relaxed">
              {article.excerpt}
            </p>
            
            <div class="pt-4 border-t border-gray-100">
              <a 
                href={`/noticias/${index + 1}`}
                class="inline-flex items-center space-x-2 text-accent-800 hover:text-accent-900 font-medium transition-colors"
              >
                <span>Leer más</span>
                <ArrowRight size="16" />
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>

    <div class="text-center mt-12">
      <a href="/noticias" class="inline-flex items-center space-x-2 bg-accent-800 text-white px-8 py-3 rounded-lg hover:bg-accent-900 transition-colors font-semibold">
        <span>Ver Todas las Noticias</span>
        <ArrowRight size="18" />
      </a>
    </div>
  </div>
</section>
}

// Función para inferir categoría del texto
function inferirCategoria(texto) {
  const textoLower = texto.toLowerCase();
  
  // Verificar primero si contiene certificación
  if (textoLower.includes('certificación') || textoLower.includes('certificacion')) {
    return 'Actualizaciones y mejoras para quienes confían en nosotros';
  }
  if (textoLower.includes('capacitación') || textoLower.includes('capacitacion') || textoLower.includes('entrenamiento')) {
    return 'Capacitación';
  }
  if (textoLower.includes('haccp') || textoLower.includes('iso 22000') || textoLower.includes('alimentos')) {
    return 'Seguridad Alimentaria';
  }
  if (textoLower.includes('iso 27001') || textoLower.includes('ciberseguridad') || textoLower.includes('cyberseguridad')) {
    return 'Seguridad IT';
  }
  if (textoLower.includes('iso 45001') || textoLower.includes('seguridad') || textoLower.includes('salud')) {
    return 'Seguridad Laboral';
  }
  if (textoLower.includes('iso 14001') || textoLower.includes('ambiental') || textoLower.includes('medio ambiente')) {
    return 'Gestión Ambiental';
  }
  if (textoLower.includes('auditoria') || textoLower.includes('auditoría')) {
    return 'Auditoría';
  }
  if (textoLower.includes('webinar') || textoLower.includes('seminario') || textoLower.includes('evento')) {
    return 'Evento';
  }
  
  return 'Actualizaciones y mejoras para quienes confían en nosotros';
}

// Función para crear título más presentable
function crearTitulo(texto) {
  // Tomar las primeras 80 caracteres y limpiar
  let titulo = texto.replace(/\n/g, ' ').substring(0, 80);
  
  // Si termina en el medio de una palabra, cortar en la palabra anterior
  if (titulo.length === 80) {
    const ultimoEspacio = titulo.lastIndexOf(' ');
    if (ultimoEspacio > 50) {
      titulo = titulo.substring(0, ultimoEspacio) + '...';
    }
  }
  
  // Capitalizar primera letra
  return titulo.charAt(0).toUpperCase() + titulo.slice(1);
}

// Mapear datos del JSON al formato esperado por el frontend
const news = noticiasData
  .filter(noticia => noticia.text && noticia.text.trim() !== '') // Filtrar entradas vacías
  .slice(0, 30) // Mostrar las primeras 30 noticias
  .map((noticia, index) => {
    return {
      date: extraerFecha(noticia.text), // Extraer fecha directamente del texto
      title: crearTitulo(noticia.text),
      excerpt: noticia.text.replace(/\n/g, ' ').substring(0, 150) + (noticia.text.length > 150 ? '...' : ''),
      category: inferirCategoria(noticia.text), // Todas las noticias usan categorización automática
      image: noticia.image_url
    };
  });

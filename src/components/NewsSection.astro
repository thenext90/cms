---
import { Calendar, ArrowRight } from 'lucide-astro';

// Importar datos usando fetch para mayor compatibilidad
import noticiasData from '../data/noticias.json';

// Función para extraer fecha del texto
function extraerFecha(texto) {
  // Buscar patrones de fecha en el texto
  const patronesFecha = [
    /(\w+)\s+(\d{4})/g, // "Enero 2025", "Diciembre 2024"
    /(\d{4})-(\d{4})/g, // "2024-2025"
    /(\w+)\s+(\d{1,2}),?\s+(\d{4})/g // "Enero 15, 2025"
  ];
  
  for (const patron of patronesFecha) {
    const match = texto.match(patron);
    if (match) {
      return match[0];
    }
  }
  
  // Si no encuentra fecha, usar fecha actual
  const ahora = new Date();
  const meses = [
    'Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio',
    'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'
  ];

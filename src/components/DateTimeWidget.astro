---
// Widget de fecha y hora horizontal para Chile
---

<div class="flex items-center space-x-4 bg-white/10 backdrop-blur-sm rounded-lg px-4 py-1.5 border border-white/20">
  <div class="flex flex-col">
    <div id="current-time" class="text-sm font-bold text-white leading-tight"></div>
    <div class="text-xs text-orange-200 font-medium">Chile</div>
  </div>
  <div class="hidden md:block w-px h-6 bg-white/30"></div>
  <div class="hidden md:flex flex-col">
    <div id="current-date" class="text-sm text-white font-medium leading-tight"></div>
    <div id="current-day" class="text-[10px] text-orange-200"></div>
  </div>
</div>

<script>
  function updateDateTime() {
    const now = new Date();
    
    // Configurar para zona horaria de Chile
    const options = {
      timeZone: 'America/Santiago',
      hour12: false
    };
    
    const timeOptions = {
      ...options,
      hour: '2-digit',
      minute: '2-digit'
    };
    
    const dateOptions = {
      ...options,
      day: 'numeric',
      month: 'long',
      year: 'numeric'
    };
    
    const dayOptions = {
      ...options,
      weekday: 'long'
    };
    
    const timeElement = document.getElementById('current-time');
    const dateElement = document.getElementById('current-date');
    const dayElement = document.getElementById('current-day');
    
    if (timeElement && dateElement && dayElement) {
      timeElement.textContent = now.toLocaleTimeString('es-CL', timeOptions);
      dateElement.textContent = now.toLocaleDateString('es-CL', dateOptions);
      dayElement.textContent = now.toLocaleDateString('es-CL', dayOptions);
    }
  }
  
  // Actualizar inmediatamente y luego cada minuto
  updateDateTime();
  setInterval(updateDateTime, 60000);
</script>
---
// Widget de fecha y hora horizontal para Chile
---

<div class="flex items-center space-x-3 bg-white/10 backdrop-blur-sm rounded-lg px-3 py-1 border border-white/20">
  <div class="flex items-center space-x-2">
    <span class="text-orange-200 text-xs">üïê</span>
    <div class="flex flex-col">
      <div id="current-time" class="text-xs font-bold text-white leading-tight"></div>
      <div class="text-[10px] text-orange-200">Chile</div>
    </div>
  </div>
  <div class="hidden md:flex items-center space-x-2">
    <span class="text-orange-200 text-xs">üìÖ</span>
    <div id="current-date" class="text-xs text-white font-medium"></div>
  </div>
</div>

<script>
  function updateDateTime() {
    const now = new Date();
    
    // Configurar para zona horaria de Chile
    const options = {
      timeZone: 'America/Santiago',
      hour12: false
    };
    
    const timeOptions = {
      ...options,
      hour: '2-digit',
      minute: '2-digit'
    };
    
    const dateOptions = {
      ...options,
      weekday: 'short',
      day: 'numeric',
      month: 'short'
    };
    
    const timeElement = document.getElementById('current-time');
    const dateElement = document.getElementById('current-date');
    
    if (timeElement && dateElement) {
      timeElement.textContent = now.toLocaleTimeString('es-CL', timeOptions);
      dateElement.textContent = now.toLocaleDateString('es-CL', dateOptions);
    }
  }
  
  // Actualizar inmediatamente y luego cada minuto (menos frecuente)
  updateDateTime();
  setInterval(updateDateTime, 60000);
</script>
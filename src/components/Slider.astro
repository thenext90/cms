.slider-container {
  position: relative;
  width: 100%;
  max-width: 900px;
  margin: 0 auto;
  box-shadow: 0 4px 24px rgba(0,0,0,0.12);

  <script>
    let modernSlideIndex = 1;
    function modernChangeSlide(n) {
      modernShowSlide(modernSlideIndex += n);
    }
    function modernCurrentSlide(n) {
      modernShowSlide(modernSlideIndex = n);
    }
    function modernShowSlide(n) {
      const slides = document.querySelectorAll('.modern-slide');
      const indicators = document.querySelectorAll('.modern-indicator');
      if (n > slides.length) { modernSlideIndex = 1; }
      if (n < 1) { modernSlideIndex = slides.length; }
      slides.forEach(slide => slide.classList.remove('active'));
      indicators.forEach(ind => ind.classList.remove('active'));
      slides[modernSlideIndex - 1].classList.add('active');
      indicators[modernSlideIndex - 1].classList.add('active');
    }
    setInterval(() => {
      modernChangeSlide(1);
    }, 6000);
    document.addEventListener('DOMContentLoaded', function() {
      modernShowSlide(modernSlideIndex);
    });
  </script>

  <style>
  .modern-slider-container {
    position: relative;
    width: 100%;
    max-width: 950px;
    margin: 0 auto;

    font-weight: 700;
    margin-bottom: 0.7rem;
    letter-spacing: 0.02em;
    color: #FFD6D6;
  }
  .modern-slide-desc {
    font-size: 1.15rem;
    font-weight: 400;
    margin-bottom: 0;
    color: #F5BABA;
  }
  .modern-nav-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(139,46,46,0.85);
    color: #fff;
    border: none;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    cursor: pointer;
    font-size: 2rem;
    box-shadow: 0 2px 8px rgba(139,46,46,0.18);

---
import { Swiper, SwiperSlide } from 'swiper/astro';
import 'swiper/swiper-bundle.css';
---

<div class="slider-container">
  <Swiper
    spaceBetween={50}
    slidesPerView={1}
    navigation
    pagination={{ clickable: true }}
    autoplay={{ delay: 3000 }}
  >
    <SwiperSlide>
      <img src="/slider1.jpg" alt="Slide 1" />
    </SwiperSlide>
    <SwiperSlide>
      <img src="/slider2.jpg" alt="Slide 2" />
    </SwiperSlide>
    <SwiperSlide>
      <img src="/slider3.jpg" alt="Slide 3" />
    </SwiperSlide>
  </Swiper>
</div>

<style>
.slider-container {
  width: 100%;
  max-width: 800px;
  margin: 0 auto;
}
</style>

---
import { ArrowRight, CheckCircle, Star } from 'lucide-astro';
---

<section class="bg-accent-800 text-white py-20">
  <div class="max-w-container mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="space-y-8">
        <div class="space-y-4">
          <div class="flex items-center space-x-2 text-orange-100">
            <Star size="20" class="fill-current" />
            <span class="text-sm font-medium">Más de 25 años de experiencia</span>
          </div>
          
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
            CMS Consultores
            <span class="block text-orange-100">Tu Socio Estratégico</span>
            <span class="block text-2xl md:text-3xl lg:text-4xl font-normal">
              en Calidad y Gestión
            </span>
          </h1>
          
          <p class="text-xl text-orange-50 leading-relaxed">
            Especialistas en implementación de sistemas de gestión de calidad, 
            certificaciones ISO y capacitación empresarial. Transformamos organizaciones 
            a través de la excelencia operacional y el mejoramiento continuo.
          </p>
        </div>

        <div class="flex flex-wrap gap-4">
          <a href="/servicios" class="flex items-center space-x-2 bg-white text-accent-800 px-8 py-3 rounded-lg hover:bg-red-50 transition-colors font-semibold">
            <span>Conocer Servicios</span>
            <ArrowRight size="18" />
          </a>
          
          <a href="/contacto" class="flex items-center space-x-2 border-2 border-white text-white px-8 py-3 rounded-lg hover:bg-white hover:text-accent-800 transition-colors font-semibold">
            <span>Contactar Ahora</span>
          </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 pt-8">
          <div class="flex items-center space-x-3">
            <CheckCircle size="24" class="text-green-400 flex-shrink-0" />
            <span class="text-sm">Certificaciones ISO</span>
          </div>
          <div class="flex items-center space-x-3">
            <CheckCircle size="24" class="text-green-400 flex-shrink-0" />
            <span class="text-sm">Capacitación Especializada</span>
          </div>
          <div class="flex items-center space-x-3">
            <CheckCircle size="24" class="text-green-400 flex-shrink-0" />
            <span class="text-sm">Consultoría Integral</span>
          </div>
        </div>
      </div>

      <div class="relative">
        <div class="relative z-10">
          <!-- Slider Container -->
          <div class="slider-container">
            <div class="slider" id="hero-slider">
              <div class="slide active">
                <img src="https://images.unsplash.com/photo-1600880292203-757bb62b4baf?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80" alt="Equipo de Consultores Profesionales" class="rounded-2xl shadow-2xl w-full h-auto" />
              </div>
              <div class="slide">
                <img src="https://images.unsplash.com/photo-1521737604893-d14cc237f11d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80" alt="Reunión de Negocios Corporativa" class="rounded-2xl shadow-2xl w-full h-auto" />
              </div>
              <div class="slide">
                <img src="https://images.unsplash.com/photo-1556745757-8d76bdb6984b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80" alt="Consultores Analizando Datos" class="rounded-2xl shadow-2xl w-full h-auto" />
              </div>
            </div>
            
            <!-- Navigation buttons -->
            <button class="nav-btn prev-btn" onclick="changeHeroSlide(-1)">&#10094;</button>
            <button class="nav-btn next-btn" onclick="changeHeroSlide(1)">&#10095;</button>
            
            <!-- Dots indicator -->
            <div class="dots-container">
              <span class="dot active" onclick="currentHeroSlide(1)"></span>
              <span class="dot" onclick="currentHeroSlide(2)"></span>
              <span class="dot" onclick="currentHeroSlide(3)"></span>
            </div>
          </div>
        </div>
        
        <!-- Elementos decorativos -->
        <div class="absolute -top-4 -right-4 w-24 h-24 bg-orange-400 rounded-full opacity-20"></div>
        <div class="absolute -bottom-8 -left-8 w-32 h-32 bg-orange-300 rounded-full opacity-10"></div>
      </div>
    </div>
  </div>
</section>

<script>
  let heroSlideIndex = 1;

  function changeHeroSlide(n) {
    showHeroSlide(heroSlideIndex += n);
  }

  function currentHeroSlide(n) {
    showHeroSlide(heroSlideIndex = n);
  }

  function showHeroSlide(n) {
    const slides = document.querySelectorAll('#hero-slider .slide');
    const dots = document.querySelectorAll('#hero-slider ~ .dots-container .dot');
    
    if (n > slides.length) { heroSlideIndex = 1; }
    if (n < 1) { heroSlideIndex = slides.length; }
    
    slides.forEach(slide => slide.classList.remove('active'));
    dots.forEach(dot => dot.classList.remove('active'));
    
    if (slides[heroSlideIndex - 1]) {
      slides[heroSlideIndex - 1].classList.add('active');
    }
    if (dots[heroSlideIndex - 1]) {
      dots[heroSlideIndex - 1].classList.add('active');
    }
  }

  // Auto-slide every 5 seconds
  setInterval(() => {
    changeHeroSlide(1);
  }, 5000);

  // Initialize slider
  document.addEventListener('DOMContentLoaded', function() {
    showHeroSlide(heroSlideIndex);
  });
</script>

<style>
.slider-container {
  position: relative;
  width: 100%;
  max-width: 100%;
}

.slider {
  position: relative;
  width: 100%;
  height: auto;
  overflow: hidden;
}

.slide {
  display: none;
  position: relative;
  width: 100%;
  height: 100%;
}

.slide.active {
  display: block;
}

.slide img {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.nav-btn {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border: none;
  padding: 12px 16px;
  cursor: pointer;
  font-size: 16px;
  border-radius: 0 3px 3px 0;
  user-select: none;
  z-index: 20;
  transition: background-color 0.3s;
}

.nav-btn:hover {
  background-color: rgba(0, 0, 0, 0.8);
}

.prev-btn {
  left: 10px;
  border-radius: 0 3px 3px 0;
}

.next-btn {
  right: 10px;
  border-radius: 3px 0 0 3px;
}

.dots-container {
  text-align: center;
  margin-top: 15px;
  position: relative;
  z-index: 20;
}

.dot {
  cursor: pointer;
  height: 12px;
  width: 12px;
  margin: 0 4px;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  display: inline-block;
  transition: background-color 0.3s;
}

.dot.active,
.dot:hover {
  background-color: rgba(255, 255, 255, 0.9);
}

/* Fade animation */
.slide {
  opacity: 0;
  transition: opacity 0.5s ease-in-out;
}

.slide.active {
  opacity: 1;
}
</style>
// Función para mostrar la fecha actual
function mostrarFechaActual() {
  const ahora = new Date();
  const opciones = { 
    weekday: 'long', 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  };
  const fechaFormateada = ahora.toLocaleDateString('es-ES', opciones);
  document.getElementById('fecha-actual').textContent = fechaFormateada;
  
  // Buscar efeméride de hoy
  const dia = ahora.getDate();
  const mes = ahora.toLocaleDateString('es-ES', { month: 'long' }).toLowerCase();
  
  let efemeride = "No hay efemérides registradas para el día de hoy.";
  if (efemerides[mes]) {
    const eventoHoy = efemerides[mes].find(evento => 
      evento.fecha.includes(dia.toString())
    );
    if (eventoHoy) {
      efemeride = `${eventoHoy.evento} (${eventoHoy.año}): ${eventoHoy.descripcion}`;
    }
  }
  
  document.getElementById('efemeride-hoy').textContent = efemeride;
}

// Función para mostrar efemérides de un mes
function mostrarEfemerides(mes) {
  const container = document.getElementById('efemerides-content');
  const eventos = efemerides[mes] || [];
  
  if (eventos.length === 0) {
    container.innerHTML = '<p class="text-gray-600 text-center">No hay efemérides registradas para este mes.</p>';
    return;
  }
  
  container.innerHTML = eventos.map(evento => `
    <div class="bg-white p-6 rounded-xl shadow-sm border-l-4 border-accent-800">
      <div class="flex items-start space-x-4">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-accent-100 rounded-lg flex items-center justify-center">
            <span class="text-accent-800 font-bold text-sm">${evento.fecha.split(' ')[0]}</span>
          </div>
        </div>
        <div class="flex-grow">
          <div class="flex items-center space-x-2 mb-2">
            <h3 class="text-lg font-semibold text-gray-800">${evento.evento}</h3>
            <span class="bg-accent-100 text-accent-800 px-2 py-1 rounded-full text-xs font-medium">${evento.año}</span>
          </div>
          <p class="text-gray-600">${evento.descripcion}</p>
          <p class="text-sm text-gray-500 mt-2">${evento.fecha}</p>
        </div>
      </div>
    </div>
  `).join('');
}

// Inicializar página
document.addEventListener('DOMContentLoaded', function() {
  mostrarFechaActual();
  mostrarEfemerides('noviembre'); // Mostrar noviembre por defecto (Día Mundial de la Calidad)
  
  // Eventos para botones de meses
  document.querySelectorAll('.mes-button').forEach(button => {
    button.addEventListener('click', function() {
      // Remover selección anterior
      document.querySelectorAll('.mes-button').forEach(b => b.classList.remove('ring-2', 'ring-accent-800'));
      // Agregar selección actual
      this.classList.add('ring-2', 'ring-accent-800');
      
      const mes = this.getAttribute('data-mes');
      mostrarEfemerides(mes);
    });
  });
  
  // Seleccionar noviembre por defecto
  document.querySelector('[data-mes="noviembre"]').classList.add('ring-2', 'ring-accent-800');
});
</script>

---
import Layout from '../layouts/Layout.astro';
import Parser from 'rss-parser';
import { Globe, Calendar, ExternalLink, RefreshCcw } from 'lucide-astro';

const parser = new Parser();
let articles = [];
let error = null;

try {
  const feed = await parser.parseURL('https://es.wired.com/feed/ideas/rss');
  articles = feed.items.slice(0, 10);
} catch (e) {
  error = 'Error al cargar las noticias RSS';
  console.error('RSS Error:', e);
}
---

<Layout title="Noticias de Wired Ideas - CMS Consultores">
  <main class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-indigo-50">
    <section class="relative py-16 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <div class="flex justify-center items-center mb-6">
          <Globe class="w-12 h-12 text-blue-600 mr-4" />
          <RefreshCcw class="w-8 h-8 text-green-500" />
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Noticias de <span class="text-blue-600">Wired Ideas</span>
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          Las últimas innovaciones y tendencias tecnológicas
        </p>
      </div>
    </section>
    <section class="py-16 px-4 sm:px-6 lg:px-8">
      <div class="max-w-6xl mx-auto">
        {error ? (
          <div class="bg-red-50 border border-red-200 rounded-lg p-6 text-center">
            <p class="text-red-600 text-lg">{error}</p>
          </div>
        ) : (
          <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            {articles.map((article) => (
              <article class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group">
                <div class="p-6">
                  <h3 class="text-lg font-bold text-gray-900 mb-3">{article.title}</h3>
                  <p class="text-gray-600 text-sm mb-4">{article.contentSnippet}</p>
                  <a href={article.link} target="_blank" class="text-blue-600 hover:text-blue-800">Leer más</a>
                </div>
              </article>
            ))}
          </div>
        )}
      </div>
    </section>
  </main>
</Layout>

import Layout from '../layouts/Layout.astro';

// Función para cargar los datos de noticias desde el JSON más reciente
async function loadIsoData() {
  try {
    const newsFiles = import.meta.glob('../data/iso_news/iso_news_articulos_*.json');
    const filePaths = Object.keys(newsFiles);

    if (filePaths.length === 0) {
      console.warn("No data files found. Returning empty array.");
      return { articles: [], metadata: { total_articles: 0, generated_at: new Date().toISOString() } };
    }

    // Encuentra el archivo más reciente basándose en el timestamp del nombre
    const latestFile = filePaths.reduce((latest, current) => {
      const latestTimestamp = latest.match(/_(\d{8}_\d{6})\.json$/)?.[1];
      const currentTimestamp = current.match(/_(\d{8}_\d{6})\.json$/)?.[1];
      if (latestTimestamp && currentTimestamp) {
        return currentTimestamp > latestTimestamp ? current : latest;
      }
      return latest;
    });

    const module = await newsFiles[latestFile]();
    const data = module.default || module;

    // Ordenar artículos por fecha (usando scraped_at para mayor precisión)
    if (data.articles && Array.isArray(data.articles)) {
      data.articles.sort((a, b) => {
        const dateA = new Date(a.scraped_at || 0).getTime();
        const dateB = new Date(b.scraped_at || 0).getTime();
        return dateB - dateA;
      });
    }

    return data;

  } catch (error) {
    console.error("Error cargando datos de noticias:", (error as Error).message);
    return { articles: [], metadata: { total_articles: 0, generated_at: new Date().toISOString() } };
  }
}

// Cargar datos
const isoData = await loadIsoData();
const articles = isoData.articles || [];
const metadata = isoData.metadata || {};

// Formatear fecha para mostrar
const formatDate = (dateString: string): string => {
  if (!dateString) return '';
  // El formato de fecha del scraper es DD/MM/YYYY
  const parts = dateString.split('/');
  if (parts.length === 3) {
    // Reordenar a YYYY-MM-DD para un parseo consistente
    const isoDate = `${parts[2]}-${parts[1]}-${parts[0]}`;
    return new Date(isoDate).toLocaleDateString('es-CL', {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    });
  }
  // Fallback para fechas en formato ISO
  return new Date(dateString).toLocaleDateString('es-CL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<Layout 
  title="Noticias ISO Chile - Normativas y Certificaciones"
  description="Últimas noticias sobre normativas ISO, certificaciones y estándares de calidad en Chile."
>
  <main class="container mx-auto px-4 py-8">
    <!-- Header Section -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        📊 Noticias ISO Chile
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Mantente actualizado con las últimas normativas ISO, certificaciones 
        y estándares de calidad en Chile.
      </p>
      
      {metadata.generated_at && (
        <div class="mt-4 text-sm text-gray-500">
          📅 Última actualización: {new Date(metadata.generated_at).toLocaleString('es-CL')}
        </div>
      )}
    </div>

    <!-- Stats Section -->
    {metadata.total_articles && (
      <div class="bg-blue-50 rounded-lg p-6 mb-8">
        <div class="flex justify-center text-center">
          <div>
            <div class="text-3xl font-bold text-blue-600">{metadata.total_articles}</div>
            <div class="text-sm text-gray-600">Artículos Encontrados</div>
          </div>
        </div>
      </div>
    )}

    <!-- Articles Grid -->
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {articles.length > 0 ? articles.map((article: any) => (
        <article class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow overflow-hidden flex flex-col">
          {article.imageUrl && (
            <div class="h-40 overflow-hidden">
              <img
                src={article.imageUrl}
                alt={`Imagen para ${article.title}`}
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
          )}
          <div class="p-6 flex-grow">
            <div class="mb-4">
              <h2 class="text-xl font-semibold text-gray-900 mb-2 line-clamp-3">
                {article.title}
              </h2>
              
              {article.summary && (
                <p class="text-gray-600 text-sm line-clamp-4 mb-3">
                  {article.summary}
                </p>
              )}
            </div>
            
            <div class="flex flex-wrap gap-2 mb-4">
              {article.source && (
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  🌐 {article.source}
                </span>
              )}
            </div>
          </div>

          <div class="p-6 pt-0 border-t border-gray-200 mt-auto">
            <div class="flex justify-between items-center">
              {article.date && (
                <span class="text-xs text-gray-500">
                  📅 {formatDate(article.date)}
                </span>
              )}
              
              {article.url && (
                <a 
                  href={article.url} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-blue-600 hover:text-blue-800 text-sm font-medium"
                >
                  Ver más →
                </a>
              )}
            </div>
          </div>
        </article>
      )) : (
        <div class="col-span-full text-center py-12">
          <div class="text-gray-500 text-lg">
            📊 No hay datos disponibles
          </div>
          <p class="text-gray-400 mt-2">
            Los datos se actualizarán automáticamente pronto.
          </div>
        </div>
      )}
    </div>

    <!-- Info Section -->
    <div class="mt-12 bg-gray-50 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-3">
        ℹ️ Acerca de estos datos
      </h3>
      <p class="text-gray-600 text-sm mb-4">
        Los datos se actualizan automáticamente cada día a las 6:00 AM UTC , analiza fuentes oficiales y otros organismos relevantes en Chile.
      </p>
      
      <div class="mt-4 text-xs text-gray-500">
        Sistema automatizado | 🔄 Próxima actualización: 6:00 AM UTC
      </div>
    </div>
  </main>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Estilos para las imágenes de las noticias */
  .article-image {
    transition: transform 0.3s ease;
  }

  .article-image:hover {
    transform: scale(1.05);
  }

  /* Placeholder para imágenes que fallan al cargar */
  .image-placeholder {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 2rem;
  }

  /* Animación de carga */
  .loading-shimmer {
    background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
    background-size: 200% 100%;
    animation: loading 1.5s infinite;
  }

  @keyframes loading {
    0% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }

  /* Mejoras para cards responsivas */
  @media (max-width: 768px) {
    .articles-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .articles-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
